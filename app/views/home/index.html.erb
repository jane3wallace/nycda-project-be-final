<br><br>
<% if user_signed_in? %>
	<div>Hello <%= current_user.first_name %>!</div>
  <div><%= image_tag current_user.avatar.url(:thumb) %></div>
  <%= link_to("Edit Account", edit_user_registration_path) %> | 
  <%= link_to("Sign Out", destroy_user_session_path, method: :delete) %>
  <div>
    <%= link_to("My Bookmarks", bookmarks_path) %>
  </div>
<% else %>
  <div><%= link_to("Sign In", new_user_session_path) %></div>
  <div>New user? <%= link_to("Sign Up", new_user_registration_path) %></div>
<% end %>
