<div>
  <div class="col-sm-12">
    <h2>
      Create a Bookmark
    </h2>
  </div>
  
  <%= form_for @bookmark, html: { class: 'form-horizontal', role: 'form' } do |b| %>

    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= b.label :url %>
      </div>
      <div class="col-sm-6">
        <%= b.url_field :url, autofocus: true, class: 'form-control' %>
      </div>
      <p class="help-block">
        <em>*required</em>
      </p>
    </div>

    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= b.label :title %>
      </div>
      <div class="col-sm-6">
        <%= b.text_field :title, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= b.label :category %>
      </div>
      <div class="col-sm-6">
        <%= b.text_field :category, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= b.label :subcategory %>
      </div>
      <div class="col-sm-6">
        <%= b.text_field :subcategory, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-2 control-label">
      <%= b.label :notes %>
      </div>
      <div class="col-sm-6" rows="3">
        <%= b.text_area :notes, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-6">
        <%= b.submit "Create", class: "btn" %>
      </div>
    </div>
  <% end %>

  <div class="col-md-12">
    <br /><%= link_to("Back to List of Bookmarks", bookmarks_path) %>
  </div>

</div>