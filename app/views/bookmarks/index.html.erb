<div class="col-md-12">
	<h1>My Bookmarks</h1>
</div>

<% current_user.bookmarks.each do |bookmark| %>
	<div>
    <div class="col-md-12">
      <h3><%= bookmark.title %></h3>
    </div>
    <div class="col-md-12">
      <strong><a href="<%= bookmark.url %>" target="_blank"><%= bookmark.url %></a></strong>
    </div>
    <div class="col-md-12">
      <em><a href="/bookmarks/<%= bookmark.id %>">Details</a></em>
    </div>
  </div>
<% end %>



<div class="col-md-12">
  <br /><%= link_to("Create a New Bookmark", new_bookmark_path) %>
</div>